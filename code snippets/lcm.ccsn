int lcm(int a, int b) {
    return a > b ? (a / gcd(a, b)) * b : (b / gcd(a, b)) * a;
}

long int lcml(long int a, long int b) {
    return a > b ? (a / gcdl(a, b)) * b : (b / gcdl(a, b)) * a;
}

long long int lcmll(long long int a, long long int b) {
    return a > b ? (a / gcdll(a, b)) * b : (b / gcdll(a, b)) * a;
}